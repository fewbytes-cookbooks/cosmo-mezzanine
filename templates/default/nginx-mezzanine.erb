# Based on: https://github.com/stephenmcd/mezzanine/blob/master/mezzanine/project_template/deploy/nginx.conf
# Later: make the name and port dynamic
upstream local_unicorn {
  server 127.0.0.1:8000;
}

server {
  listen 80;
  location / {
    proxy_redirect off;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Protocol $scheme;
    proxy_pass http://local_unicorn;
  }
  location /static/ {
    root <%= @app_dir %>;
    access_log off;
    log_not_found off;
  }

  location /robots.txt {
    root <%= @app_dir %>/static;
    access_log off;
    log_not_found off;
  }

  location /favicon.ico {
    root <%= @app_dir %>/static/img;
    access_log off;
    log_not_found off;
  }
}
